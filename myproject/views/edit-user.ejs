<!DOCTYPE html>
<html lang="en">

<head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>Lớp học trực tuyến - eClass</title>
        <link href="./../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="./dist/css/style.css">
        <link href="./../dist/css/sb-admin-2.min.css" rel="stylesheet">
        <link href="./../vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        <!-- jQuery -->
        <script src="./../vendor/jquery/jquery.min.js"></script>
        <!-- socket io -->
</head>

<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <% include layouts/navbar-header %>
            <% include layouts/navbar-top-links %>
            <% include layouts/right-sidebar-admin %>
        </nav>

        <div id="page-wrapper">
            <% include layouts/page-title %>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Chỉnh sửa thông tin người dùng
                            </div>
                            <div class="panel-body">

                                <div class="row">
                                    <div class="col-lg-6">
                                        <form action="../edit-user/<%= data.id %>" method="POST" role="form" enctype="multipart/form-data">
                                            <div class="form-group">
                                                <label>Tên hiển thị</label>
                                                <input name="displayname" class="form-control" type="text" value="<%= data.displayname %>">
                                            </div>
                                            <div class="form-group">
                                                <label>Tên đăng nhập</label>
                                                <input name="username" class="form-control" disabled value="<%= data.username %>">
                                            </div>
                                            <div class="form-group">
                                                <label>Email</label>
                                                <input name="email" class="form-control" value="<%= data.email %>">
                                            </div>
                                            <div class="form-group">
                                                <label>Mật khẩu</label>
                                                <input name="password" class="form-control" placeholder="Nhập mật khẩu mới" value="<%= data.password %>" type="password" autocomplete="off">
                                            </div>
                                            <div class="form-group">
                                                    <label>Ảnh đại diện cũ</label>
                                                    <img width="100px" src="/upload/<%= data.image %>" alt="">
                                                </div>
                                            <div class="form-group">
                                                <label>Ảnh đại diện mới</label>
                                                <input type="file" name="uploadfile">
                                            </div>

                                            <div class="form-group">
                                                <label>Level</label>
                                                <div class="radio">
                                                    <label>
                                                        <input type="radio" name="level" id="optionsRadios1" value="1" checked="">Giảng viên
                                                    </label>
                                                </div>
                                                <div class="radio">
                                                    <label>
                                                        <input type="radio" name="level" id="optionsRadios2" value="2">Sinh viên
                                                    </label>
                                                </div>

                                            </div>
                                            <button type="submit" class="btn btn-default">Submit</button>
                                            <button type="reset" class="btn btn-default">Reset</button>
                                        </form>
                                    </div>
                                    <!-- /.col-lg-6 (nested) -->

                                </div>
                                <!-- /.row (nested) -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
     <!-- Bootstrap Core JavaScript -->
     <script src="./../vendor/bootstrap/js/bootstrap.min.js"></script>

     <!-- Metis Menu Plugin JavaScript -->
     <script src="./../vendor/metisMenu/metisMenu.min.js"></script>
 
     <!-- Custom Theme JavaScript -->
     <script src="./../dist/js/sb-admin-2.min.js"></script>
</body>

</html>