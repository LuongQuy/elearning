<!DOCTYPE html>
<html lang="en">

<head>
    <% include layouts/content-header-tag %>
</head>

<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <% include layouts/navbar-header %>
                <% include layouts/navbar-top-links %>
                    <% include layouts/right-sidebar-admin %>
        </nav>

        <div id="page-wrapper">
            <% include layouts/page-title %>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Form thêm người dùng mới
                            </div>
                            <div class="panel-body">

                                <div class="row">
                                    <div class="col-lg-6">
                                        <form action="add-new-user" method="POST" role="form" enctype="multipart/form-data">
                                            <div class="form-group">
                                                <label>Tên hiển thị</label>
                                                <input name="displayname" class="form-control" placeholder="Nhập tên hiển thị" required>
                                            </div>
                                            <div class="form-group">
                                                <label>Tên đăng nhập</label>
                                                <input name="username" class="form-control" placeholder="Nhập tên đăng nhập" required>
                                            </div>
                                            <div class="form-group">
                                                <label>Email</label>
                                                <input type="email" name="email" class="form-control" placeholder="Nhập Email" required>
                                            </div>
                                            <div class="form-group">
                                                <label>Mật khẩu</label>
                                                <input name="password" class="form-control" placeholder="Nhập mật khẩu" type="password" autocomplete="off" required>
                                            </div>
                                            <div class="form-group">
                                                <label>Ảnh đại diện</label>
                                                <input type="file" name="uploadfile">
                                            </div>

                                            <div class="form-group">
                                                <label>Level</label>
                                                <div class="radio">
                                                    <label>
                                                        <input type="radio" name="level" id="optionsRadios1" value="1" checked="">Giảng viên
                                                    </label>
                                                </div>
                                                <div class="radio">
                                                    <label>
                                                        <input type="radio" name="level" id="optionsRadios2" value="2">Sinh viên
                                                    </label>
                                                </div>

                                            </div>
                                            <button type="submit" class="btn btn-default">Submit</button>
                                            <button type="reset" class="btn btn-default">Reset</button>
                                        </form>
                                    </div>
                                    <!-- /.col-lg-6 (nested) -->

                                </div>
                                <!-- /.row (nested) -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <% include layouts/scripts %>
</body>

</html>